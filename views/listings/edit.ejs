<% layout('layouts/boilerplate') -%>
<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h3>Edit Listing</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
       
        <div class="mb-3">
             <label for="title">Title:</label>
        <input type="text" id="title" class="form-control" name="listing[title]" value="<%= listing.title %>" required><br>
        <div class="invalid-feedback">Please provide a title.</div>
    </div>

        <div class="mb-3">
        <label for="description">Description:</label>
        <textarea id="description" class="form-control" name="listing[description]" required><%= listing.description %></textarea><br>
        <div class="invalid-feedback">Please provide a description.</div>
       </div>

        <div class="mb-3">
        <label for="location">Location:</label>
        <input type="text" id="location" class="form-control" name="listing[location]" value="<%= listing.location %>" required><br>
        <div class="invalid-feedback">Please provide a location.</div>
    </div>

       <div class="row">
         <div class="mb-3 col-md-8">
        <label for="country">Country:</label>
        <input type="text" id="country" class="form-control" name="listing[country]" value="<%= listing.country %>" required><br>
        <div class="invalid-feedback">Please provide a country.</div>
    </div>

        <div class="mb-3 col-md-4">
        <label for="price">Price (in Rs.):</label>
        <input type="number" id="price" class="form-control" name="listing[price]" value="<%= listing.price %>" required><br>
       <div class="invalid-feedback">Please provide a price.</div>
       </div>
       </div>

       <div class="mb-3">
        Original Image: <br>
       <img src="<%= originalImg %>" alt="">
        </div>

        <div class="mb-3">
        <label for="image">Upload Image:</label>
        <input type="file" id="image" class="form-control" name="listing[image]"><br>
        </div>

        <button class="btn btn-dark edit-btn" type="submit">Edit</button>
    </form>
    <br><br>
    </div>
</div>
