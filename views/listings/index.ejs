<% layout('layouts/boilerplate') -%>
    <h3>All listings</h3>
    
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
      <% for(let listing of allListings) { %>
<a href="/listings/<%= listing.id %>" class="listing-card">
    <div class="card listing-card">
  <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem; object-fit: cover;">
  <div class="card-img-overlay">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
    <p class="card-text"><small>Last updated 3 mins ago</small></p>
</div>
  <div class="card-body">
    <p class="card-text">
        <b><%= listing.title %></b> <br/>
     <%= listing.price.toLocaleString('en-US', { style: 'currency', currency: 'INR' }) %>
    </p>
  </div>
</div>
</a>
<% } %>
  </div>


